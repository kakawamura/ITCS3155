%h1 All Movies
-# =debug(@movies)

%table#movies
  %thead 
    %tr
      %th Movie Title
      %th Rating 
      %th Release Date 
      %th More Info
      %th Edit 
      %th Delete

  %tbody
  - @movies.each do |movie|
    %tr
      %td= movie.title
      %td= movie.rating 
      %td= movie.release_date 
      %td= link_to "More about #{movie.title}", movie_path(movie)  
      %td= link_to 'edit', edit_movie_path(movie)
      %td= link_to 'delete', movie_path(movie), :method => :delete

= link_to 'Add new moives', new_movie_path
